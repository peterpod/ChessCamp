<h3>Student Details</h3><br />
<strong>Name:&nbsp;&nbsp;</strong> 
  <%= @student.proper_name %><br /><br />

<strong>Family:&nbsp;&nbsp;</strong> 
  <%= @student.family.family_name %>
<br /><br />

<strong>Age:&nbsp;&nbsp;</strong> 
	<%= @student.age %>
	</br>
<strong>Date of Birth:</strong>
	<%= @student.date_of_birth.strftime("%d/%m/%Y") %>
<br /><br />

<strong>Rating</strong>
  <% if @student.rating < 100 %>
  	<%= "Unrated"%><br /><br />
  <% else %>
  	<%= @student.rating %><br /><br />
  <% end %>

<strong>Active?&nbsp;&nbsp;</strong>
  <%= @student.active ? "Yes" : "No" %><br /><br />


<% if can? :edit, Student %>
  <%= link_to "Edit this student", edit_student_path(@student), class: "button tiny radius" %>&nbsp;&nbsp;
<% end %>